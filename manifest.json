{
  "name": "Greeter Robot",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "js/app.js"
      ]
    }
  ],
  "background" : {
    "service_worker" : "js/background.js"
  },
  "permissions": ["notifications"],
  "action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 3
}
